<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:layout_marginBottom="0dp"
    android:gravity="center">

    <!-- Название приложения -->
    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="POWER"
        android:textColor="@color/black"
        android:textSize="48sp"
        android:textStyle="bold" />

    <!-- Описание приложения -->
    <TextView
        android:id="@+id/app_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_title"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Добро пожаловать! Это приложение поможет вам начать свой путь в спорте."
        android:textColor="#8D575656"
        android:textSize="18sp" />

    <!-- Кнопка для тренировки сплит -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/split_training_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_below="@id/app_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/mint"
        android:text="Тренировка сплит" />

    <!-- Кнопка для тренировки фуллбоди -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/full_body_training_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_below="@id/split_training_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/mint"
        android:text="Тренировка фуллбоди" />

    <!-- Изображение спортсмена -->
    <ImageView
        android:id="@+id/sports_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/full_body_training_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/sportsman" />

    <!-- Мотивирующая цитата -->
    <TextView
        android:id="@+id/motivational_quote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sports_image"
        android:layout_marginTop="30dp"
        android:text="«Успех - это сумма всех усилий, которые ты приложил к своему развитию.»"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        android:textStyle="italic" />
</RelativeLayout>