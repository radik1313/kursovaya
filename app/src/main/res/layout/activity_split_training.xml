<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/split_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">


    <TextView
        android:id="@+id/split_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сплит тренировка"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>


    <TextView
        android:id="@+id/split_explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сплит-тренировка - это методика тренировок, при которой каждая мышечная группа работает в отдельные дни. Это позволяет уделять больше внимания каждой группе мышц и обеспечивает их лучшее развитие."
        android:textSize="15sp"
        android:textColor="#8D575656"
        android:layout_below="@id/split_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/chest_split_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Грудь/Трицепс"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/mint"
        android:layout_below="@id/split_explanation"
        android:layout_marginTop="40dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_split_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Спина/Бицепс"
        android:backgroundTint="@color/mint"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_below="@id/chest_split_button"
        android:layout_marginTop="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/leg_split_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/mint"
        android:textColor="@color/white"
        android:text="Ноги/Плечи"
        android:textSize="16sp"
        android:layout_below="@id/back_split_button"
        android:layout_marginTop="16dp"/>


    <ImageView
        android:id="@+id/split_image"
        android:layout_width="200dp"
        android:layout_height="190dp"
        android:src="@drawable/split_image"
        android:layout_marginStart="70dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/leg_split_button"
        android:layout_marginTop="24dp"/>


    <TextView
        android:id="@+id/split_quote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="«Не ставьте пределы своим мечтам. Устанавливайте цели!»"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="@android:color/black"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_below="@id/split_image"
        android:layout_centerHorizontal="true" />
</RelativeLayout>